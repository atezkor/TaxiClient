<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:endColor="#FFA15E" android:startColor="#9583EE" android:type="linear" />
            <stroke android:width="1dp" android:color="#69BFAA" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:endColor="#FDDEBF" android:startColor="#F8ECEC" />
            <stroke android:width="1dp" android:color="#80C2C2C2" />
        </shape>
    </item>
</selector>