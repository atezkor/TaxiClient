<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@null"
        android:padding="20dp"
        app:srcCompat="@drawable/ic_language" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/circe_rounded_bold"
        android:text="@string/tilni_tanlang"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll_uz"
        style="@style/ImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_flag_uz" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/ImageButtonTextView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/lang_uz" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ru"
        style="@style/ImageButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@null"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_flag_ru" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/ImageButtonTextView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="@string/lang_ru" />
    </LinearLayout>
</LinearLayout>